<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fd_filter_topcover"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"/>
    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25sp"
        android:padding="15dp"
        android:text="Filters"/>
    <TextView
        android:id="@+id/fd_filter_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialists"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_topcover"
        android:textColor="@color/darkgray"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <Spinner
        android:id="@+id/fd_filter_specialist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/lightgray"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_text1" />
    <TextView
        android:id="@+id/fd_filter_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospitals and Medical Centers"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_specialist"
        android:textColor="@color/darkgray"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <Spinner
        android:id="@+id/fd_filter_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/lightgray"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_text2" />
    <TextView
        android:id="@+id/fd_filter_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_org"
        android:textColor="@color/darkgray"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <Spinner
        android:id="@+id/fd_filter_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/lightgray"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_text3" />
    <TextView
        android:id="@+id/fd_filter_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fees"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_location"
        android:textColor="@color/darkgray"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <Spinner
        android:id="@+id/fd_filter_fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/lightgray"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_text4" />
    <TextView
        android:id="@+id/fd_filter_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_fees"
        android:textColor="@color/darkgray"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <Spinner
        android:id="@+id/fd_filter_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/lightgray"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_text5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_filter_rating">
        <Button
            android:id="@+id/fd_filter_apply_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:stateListAnimator="@null"
            android:text="Apply"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/fd_filter_reset_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:stateListAnimator="@null"
            android:text="Reset"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>