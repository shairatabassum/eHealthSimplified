<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/mp_topcover"
            android:background="#bf1e2d"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"/>
        <ImageView
            android:id="@+id/logo_amaderdoctor"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/logo_ad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mp_topcover"
            app:layout_constraintBottom_toBottomOf="@id/mp_topcover"/>
        <TextView
            android:id="@+id/poweredby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="powered by"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/appname"
            app:layout_constraintStart_toStartOf="@id/logo_amaderdoctor"
            app:layout_constraintEnd_toEndOf="@id/logo_amaderdoctor"
            app:layout_constraintBottom_toBottomOf="@id/appname"
            android:textSize="7sp"/>
        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text=" eHealthSimplified"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/poweredby"
            app:layout_constraintTop_toBottomOf="@id/logo_amaderdoctor"/>
        <Button
            android:id="@+id/mp_finddoc_btn"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_marginTop="160dp"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_height="45dp"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableStart="@drawable/ic_perm_identity_red_24dp"
            android:drawablePadding="15dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
            android:text="Find Doctor"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/mp_emergency_btn"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_height="45dp"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mp_finddoc_btn"
            android:drawableStart="@drawable/ic_warning_red_24dp"
            android:drawablePadding="15dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
            android:text="Emergency Consultancy"
            android:textAllCaps="false"/>

        <View
            android:id="@+id/mp_emptyspace"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/mp_emergency_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/mp_card1"
            android:layout_margin="5dp"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toBottomOf="@id/mp_emptyspace"
            app:layout_constraintEnd_toStartOf="@id/mp_card2"
            android:elevation="5dp"
            app:cardCornerRadius="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/mp_card1_avatar"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/mp_card1"/>
                <TextView
                    android:id="@+id/mp_card1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mp_card1_avatar"
                    android:text="Doctor\nRegistration"
                    android:gravity="center"
                    android:textColor="@color/darkgray3"
                    android:textSize="12sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/mp_card2"
            android:layout_margin="5dp"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mp_emptyspace"
            android:elevation="5dp"
            app:cardCornerRadius="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/mp_card2_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/mp_card2"/>
                <TextView
                    android:id="@+id/hpd_card2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mp_card2_avatar"
                    android:text="Patient\nRegistration"
                    android:gravity="center"
                    android:textColor="@color/darkgray3"
                    android:textSize="12sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/mp_card3"
            android:layout_margin="5dp"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintStart_toEndOf="@id/mp_card2"
            app:layout_constraintTop_toBottomOf="@id/mp_emptyspace"
            android:elevation="5dp"
            app:cardCornerRadius="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/mp_card3_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/mp_card3"/>
                <TextView
                    android:id="@+id/hpd_card3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mp_card3_avatar"
                    android:text="Login"
                    android:gravity="center"
                    android:textColor="@color/darkgray3"
                    android:textSize="12sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mp_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Use"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mp_card1"
            android:textColor="@color/black"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/mp_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mp_terms"
            android:textColor="@color/black"
            android:textSize="11sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>